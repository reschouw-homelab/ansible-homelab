[Interface]
Address = 10.222.0.1/24
ListenPort = 51820
PrivateKey = {{ server_private }}
PostUp = iptables -A FORWARD -i wg0 -j ACCEPT; iptables -t nat -A POSTROUTING -o {{ ansible_default_ipv4.interface }} -j MASQUERADE
PostDown = iptables -D FORWARD -i wg0 -j ACCEPT; iptables -t nat -D POSTROUTING -o {{ ansible_default_ipv4.interface }} -j MASQUERADE

[Peer]
# Pixel
PublicKey = {{ pixel_public }}
AllowedIPs = 10.222.0.2/32

[Peer]
# Desktop
PublicKey = {{ desktop_public }}
AllowedIPs = 10.222.0.3/32

[Peer]
# Thinkpad
PublicKey = {{ thinkpad_public }}
AllowedIPs = 10.222.0.4/32

[Peer]
# MacBook
PublicKey = {{ macbook_public }}
AllowedIPs = 10.222.0.5/32
